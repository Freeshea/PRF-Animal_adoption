pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Pull latest images') {
            steps {
                sh """
                    docker pull freeahea/animal_adoption_client:latest
                    docker pull freeahea/animal_adoption_server:latest
                """
            }
        }

        stage('Restart containers') {
            steps {
                sh """
                    docker compose -f docker-compose.prod.yaml down
                    docker compose -f docker-compose.prod.yaml up -d
                """
            }
        }
    }
}
