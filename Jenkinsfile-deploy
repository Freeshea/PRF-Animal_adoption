// Obsolete file, because you should manually trigger the deployment from images with docker compose command,
// (Jenkins containter does not have docker compose installed so the compose command would not work)
pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Pull latest images') {
            steps {
                sh """
                    docker pull freeahea/animal_adoption_client:latest
                    docker pull freeahea/animal_adoption_server:latest
                """
            }
        }
    }
}
